# .env - local config (DO NOT commit)
# Copy values below, then edit placeholders to your real values

# External auction API
AUCTION_API_ADDRESS=https://auction.example.com/api

REDIS_URL=redis://localhost:6379/0

# Comma-separated bot accounts used by AuctionPlayer
BOT_USER_IDS=bot_1001,bot_1002,bot_1003

# Distributor settings (ZMQ port and poll interval seconds)
DISTRIBUTOR_PORT=9505
DISTRIBUTOR_POLL_SEC=3

# Feature flags / tunables
SHOW_BOTS_TO_USERS=True
ALLOW_HIDDEN_BOTS_IN_UAT=True

# Limits / defaults
MAX_BIDS_PER_AUCTION=6
BOT_THROTTLE_PER_MIN=10
BUDGET_DEFAULT=10000
HYSTERESIS_WINDOW_SEC=30
